@using MyMovies.ViewModels
@model DetailsMovieViewModel

@{
    ViewBag.Title = @Model.Title;
}

<h2>@Model.Title</h2>

<ul>
    <li>@Html.DisplayNameFor(movie => movie.Genre): @Model.Genre</li>
    <li>@Html.DisplayNameFor(movie => movie.Year): @Model.Year</li>
    <li>@Html.DisplayNameFor(movie => movie.Rating): @Model.Rating</li>
    <li>@Html.DisplayNameFor(movie => movie.Cast): @Model.Cast</li>
</ul>

<p>
    @Html.ActionLink("Back to List", "Index")
</p>