@using Advertisements.ViewModels
@model CreateAdvertisementViewModel

<script src="~/Scripts/advertisements.js"></script>
<script src="~/Scripts/validation.js"></script>

@{
    ViewBag.Title = "Create Advertisement";
}

<h2>Create Advertisement</h2>

@using (Html.BeginForm("GetSubscriber", "Advertisements", FormMethod.Post, new { @class = "form-horizontal" }))
{
    @Html.ValidationSummary(false)

    <div class="form-group">
        @if (Model.IsSubscriberSelected)
        {
            @Html.RadioButtonFor(model => model.IsSubscriberSelected, true, new { id = "subscriberradio" })
        }
        else
        {
            @Html.RadioButtonFor(model => model.IsSubscriberSelected, false, new { id = "subscriberradio" })
        }
        Subscriber
        @Html.TextBoxFor(model => model.SubscriptionNumber, new
        {
            @class = "form-control",
            id = "subscriptionnumbertext",
            placeholder = "Subscription number"
        })
        <input type="submit" id="subscriptionnumberbutton" class="btn btn-default" value="Get"/>
    </div>

    <div class="form-group">
        @if (Model.IsSubscriberSelected)
        {
            @Html.RadioButtonFor(model => model.IsSubscriberSelected, false, new { id = "companyradio" })
        }
        else
        {
            @Html.RadioButtonFor(model => model.IsSubscriberSelected, true, new { id = "companyradio" })
        }
        Company
    </div>
}

