@using MyMovies.Dal
@model IEnumerable<Movie>

@{
    ViewBag.Title = "Movies";
}

<h2>Movies</h2>

<p>@Html.ActionLink("Create New", "Create")</p>

@using (Html.BeginForm())
{
    <p>
        Search: @Html.TextBox("Filter")
        <input type="submit" value="Search" />
    </p>
}

<table class="table">
    <tr>
        <th>@Html.ActionLink("Title", "Index", new { sortOrder = ViewBag.TitleSortDirection, currentFilter = ViewBag.CurrentFilter })</th>
        <th>@Html.ActionLink("Rating", "Index", new { sortOrder = ViewBag.RatingSortDirection, currentFilter = ViewBag.CurrentFilter })</th>
        <th />
    </tr>
@foreach (Movie movie in Model)
{
    <tr>
        <td>@movie.Title</td>
        <td>@movie.Rating</td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = movie.Id }) |
            @Html.ActionLink("Details", "Details", new { id = movie.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id = movie.Id })
        </td>
    </tr>
}
</table>