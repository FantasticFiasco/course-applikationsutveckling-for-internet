@using MyMovies.Dal
@model Movie

@{
    ViewBag.Title = @Model.Title;
}

<h2>@Model.Title</h2>

<ul>
    <li>@Html.DisplayNameFor(movie => movie.Rating): @Model.Rating</li>
    <li>@Html.DisplayNameFor(movie => movie.Year): @Model.Year</li>
    <li>@Html.DisplayNameFor(movie => movie.Actors): @Model.Actors</li>
</ul>

