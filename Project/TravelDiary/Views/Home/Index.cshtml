@{
    ViewBag.Title = "Index";
}

@section scripts {
    <script src="/bower_components/ngmap/build/scripts/ng-map.min.js"></script>
    <script src="http://maps.google.com/maps/api/js"></script>
}

<div>

    <div class="jumbotron">
        <h1>My Travel Diary</h1>
    </div>

    <div class="row">
        <!-- Entry text -->
        <div class="col-md-8" ng-controller="DiaryEntryController">
            <diary-entry-text></diary-entry-text>
        </div>

        <!-- Map -->
        <div class="col-md-4">
            <ng-map center="41,-87" zoom="3"></ng-map>
        </div>
    </div>
</div>