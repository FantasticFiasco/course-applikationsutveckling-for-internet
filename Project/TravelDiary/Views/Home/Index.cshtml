@{
    ViewBag.Title = "Home Page";
}

@section scripts {
    <script src="~/Scripts/app/app.js"></script>
    <script src="~/Scripts/app/services/diary-entry-service.js"></script>
    <script src="~/Scripts/app/controllers/diary-entry-controller.js"></script>
}

<div ng-app="TravelDiaryApp">

    <div class="jumbotron">
        <h1>My Travel Diary</h1>
    </div>

    <div class="row">
        <div class="col-md-8" ng-controller="DiaryEntryController">
            <h1>{{title}}</h1>

            <p ng-bind-html="content"></p>
        </div>
        <div class="col-md-4">
            <h2>Get more libraries</h2>
            <p>NuGet is a free Visual Studio extension that makes it easy to add, remove, and update libraries and tools in Visual Studio projects.</p>
            <p>
                <a class="btn btn-default" href="http://go.microsoft.com/fwlink/?LinkId=301866">Learn more &raquo;</a>
            </p>
        </div>
    </div>
</div>